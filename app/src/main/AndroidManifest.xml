<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.miles.project">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22"
        />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.miles.project.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--下拉刷新-->
        <activity android:name="com.example.miles.project.DragPullActivity"/>
        <!--音量控制-->
        <activity android:name="com.example.miles.project.VolumeActivity"/>
        <!--Activity和Fragment传值-->
        <activity android:name="com.example.miles.project.HomeActivity"/>
        <!--桌面小部件-->
        <receiver android:name="com.example.miles.project.realwidget.MyWidgetProvider">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/app_widget_provider_info"/>
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.miles.touchpull.realwidget.MyWidgetProvider.action.CLICK"/>
            </intent-filter>
        </receiver>
        <!--摄像机相关-->
        <activity android:name="com.example.miles.project.MyCameraActivity"/>

        <!--滑动图片-->
        <activity android:name="com.example.miles.project.RollImages"/>

        <!-- 可以拖拽的view -->
        <activity android:name="com.example.miles.project.TouchView"/>

        <!-- 流式布局 -->
        <activity android:name=".FlowActivity"/>

        <!-- 相机预览 -->
        <activity android:name=".CustomCameraActivity"/>
    </application>

</manifest>