<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_address"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:hint="tcp://ip:port"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:hint="请输入用户名"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_client_id"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:hint="请输入客户端ID（作为标识）"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etPublishTopic"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_client_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:hint="请输入发布Topic"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etResponseToic"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@id/etPublishTopic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:hint="请输入订阅Topic"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@id/etResponseToic"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:text="连接"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSendSth"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@id/btnConnect"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:text="发送消息"
        android:textSize="18sp" />
</RelativeLayout>